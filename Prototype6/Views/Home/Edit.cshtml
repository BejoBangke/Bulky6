@model Spec

<h2>Edit Spec</h2>

<form asp-action="Edit">
    <div class="form-group">
        <input asp-for="Id" type="hidden" />
        <label asp-for="Nama"></label>
        <input asp-for="Nama" class="form-control" />
        <span asp-validation-for="Nama" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Spesies"></label>
        <input asp-for="Spesies" class="form-control" />
        <span asp-validation-for="Spesies" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Klasifikasi"></label>
        <input asp-for="Klasifikasi" class="form-control" />
        <span asp-validation-for="Klasifikasi" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
