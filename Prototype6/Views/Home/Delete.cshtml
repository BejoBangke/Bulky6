@model Spec

<h2>Delete Spec</h2>

<p>Are you sure you want to delete this spec?</p>

<div>
    <h4>Spec</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nama</dt>
        <dd class="col-sm-10">@Model.Nama</dd>
        <dt class="col-sm-2">Spesies</dt>
        <dd class="col-sm-10">@Model.Spesies</dd>
        <dt class="col-sm-2">Klasifikasi</dt>
        <dd class="col-sm-10">@Model.Klasifikasi</dd>
    </dl>

    <form asp-action="Delete">
        <input asp-for="Id" type="hidden" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
